<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/orderTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:textSize="12dp" 
            android:text="Cancel" />

        <Button
            android:id="@+id/order"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right" 
            android:textSize="12dp"
            android:text="Order" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="I am interested in the following course" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:text="You offered in" />
    
    <TextView
        android:id="@+id/courseLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
     	android:background="#EB6D83"
        android:text="Shanghai Puxi" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="at" />
    
    <TextView
        android:id="@+id/classTimeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:background="#EB6D83"
        android:text="10:00-12:00" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="100dp"
        android:text="on" />
    
    <TextView
        android:id="@+id/classDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="100dp"
        android:background="#EB6D83"
        android:text="2012-09-27" />
    
    <TextView
        android:id="@+id/course1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:textColor="#61B6DD"
        android:textSize="18dp"
        android:text="" />
    
    <TextView
        android:id="@+id/course2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="155dp"
        android:textColor="#61B6DD"
        android:textSize="18dp"
        android:text="" />
    
    <TextView
        android:id="@+id/course3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:textColor="#61B6DD"
        android:textSize="18dp"
        android:text="" />
    
    <RadioGroup
        android:id="@+id/titleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/title1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" 
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp" >

        <RadioButton
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr." >
        </RadioButton>

        <RadioButton
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ms." >
        </RadioButton>

        <RadioButton
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mrs." >
        </RadioButton>
        
        <RadioButton
            android:id="@+id/title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miss" >
        </RadioButton>
    </RadioGroup>
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:textColor="#A4C41B"
        android:text="Contact person" />

    <EditText
        android:id="@+id/contactPerson"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:inputType="textPersonName"
		android:text="" >
        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="310dp"
        android:textColor="#A4C41B"
        android:text="E-mail" />

    <EditText
        android:id="@+id/email"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:inputType="textEmailAddress"
		android:text="" >
    </EditText>
    
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="350dp"
        android:textColor="#A4C41B"
        android:text="Cell No." />

    <EditText
        android:id="@+id/cellNumber"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:inputType="phone"
		android:text="" >
    </EditText>
    
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="390dp"
        android:textColor="#A4C41B"
        android:text="People Number" />

    <EditText
        android:id="@+id/peopleNumber"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="380dp"
        android:ems="10"
        android:inputType="number"
		android:text="1" >
    </EditText>
    
    <TextView
        android:id="@+id/pricePerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="390dp"
        android:background="#EB6D83"
        android:text="150" />
    
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="390dp"
        android:text="per/person" />

</RelativeLayout>
