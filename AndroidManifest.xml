<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ccwchina"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".CCWApplication" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".tab.CCWTabActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".calendar.CCWCalendarActivity"
            android:theme="@android:style/Theme.NoTitleBar"/>
        <activity
            android:name=".map.CCWMapActivity"
            android:theme="@android:style/Theme.NoTitleBar"/>
        <activity 
        	android:name=".information.CCWInfoActivity"
        	android:theme="@android:style/Theme.NoTitleBar"/>
        
        <activity 
        	android:name=".calendar.OrderActivity"
        	android:theme="@android:style/Theme.NoTitleBar"/>
         
         <uses-library android:name="com.google.android.maps"/>
    </application>

</manifest>